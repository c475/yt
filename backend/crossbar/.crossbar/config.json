{
   "workers": [
      {
         "type": "router",
         "options": {
            "pythonpath": [".."]
         },
         "realms": [
            {
               "name": "mediacenter",
               "roles": [

                  {
                     "name": "authenticator",
                     "permissions": [
                        {
                           "uri": "mcauthenticator",
                           "register": true
                        }
                     ]
                  },

                  {
                     "name": "backend",
                     "permissions": [
                        {
                           "uri": "*",
                           "publish": true,
                           "subscribe": false,
                           "call": false,
                           "register": true
                        }
                     ]
                  },

                  {
                     "name": "frontend",
                     "permissions": [
                        {
                           "uri": "*",
                           "publish": false,
                           "subscribe": true,
                           "call": true,
                           "register": false
                        }
                     ]
                  }
               ]
            }
         ],
         "transports": [
            {
               "type": "web",
               "endpoint": {
                  "type": "tcp",
                  "port": 8080,
                  "tls": {
                     "key": "/etc/ssl/private/mediacenter.key",
                     "certificate": "/etc/ssl/certs/mediacenter.crt",
                     "ciphers": "ECDH+AESGCM:DH+AESGCM:ECDH+AES256:DH+AES256:ECDH+AES128:DH+AES:ECDH+3DES:DH+3DES:RSA+AES:RSA+3DES:!ADH:!AECDH:!MD5:!DSS"
                  }
               },
               "paths": {
                  "/": {
                     "type": "static",
                     "directory": ".."
                  },
                  "ws": {
                     "type": "websocket",
                     "auth": {
                        "wampcra": {
                           "type": "dynamic",
                           "authenticator": "mcauthenticator"
                        }
                     }
                  }
               }
            }
         ],
         "components": [
            {
               "type": "class",
               "classname": "mediacenter.Authenticator",
               "realm": "mediacenter",
               "role": "authenticator"
            }
         ]
      },

      {
         "type": "container",
         "options": {
            "pythonpath": [".."]
         },
         "components": [
            {
               "type": "class",
               "classname": "mediacenter.Mediacenter",
               "realm": "mediacenter",
               "transport": {
                  "type": "websocket",
                  "endpoint": {
                     "type": "tcp",
                     "host": "127.0.0.1",
                     "port": 8080,
                     "tls": {
                     }
                  },
                  "url": "wss://127.0.0.1:8080/ws"
               }
            }
         ]
      }
   ]
}